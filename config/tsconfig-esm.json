{
    "extends": "../tsconfig",
    "compilerOptions": {
        "module": "es2015",
        "declaration": true,
        "removeComments": false,
        "noImplicitAny": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "pretty": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "outDir": "../dist/esm"
    },
    "angularCompilerOptions": {
        "genDir": "dist",
        "debug": false,
        "skipTemplateCodegen": true,
        "skipMetadataEmit": false,
        "strictMetadataEmit": true
    }
}
